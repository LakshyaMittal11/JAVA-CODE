import java.util.*;
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int X = sc.nextInt();
        double Y = sc.nextDouble();
        double newBalance = Y;
        if (X % 5 == 0 && X + 0.5 <= Y) {
            newBalance = Y - X - 0.5;
        }
        System.out.printf("%.2f", newBalance);
    }
}
